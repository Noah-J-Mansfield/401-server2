    <form method="post" action="login" >

      <P>&nbsp;</P>

      <P>&nbsp;</P>
      <table cellpadding="5" cellspacing="5" align="center">
        {{#if login}}
        <input type="submit" name="logout" value="logout" />
        {{else}}
        <tr>
          <td valign="top" align="right"><b>Username:</b></td>
          <td valign="top">
            <input name="txtUsername" type="text" /></td>
        </tr>
        <tr>

          <td valign="top" align="right"><b>Password:</b></td>
          <td valign="top">
            <input name="txtPassword" type="password"  /></td>
        </tr>
        <tr>
          <td colspan="2" valign="top" align="right"><input type="submit" name="btnLogin" value="Login"/></td>
        </tr>
      </table>
      {{/if}}
    </form>